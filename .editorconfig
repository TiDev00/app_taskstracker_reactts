# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

# 4 space indentation for CSharp
[*.cs]
indent_size = 4

[*.{cshtml,js,jsx,json,html,css,xml,xaml,ts,tsx}]
indent_size = 2